if [[ -z "$PS5_HOST" ]]; then
    PS5_HOST=ps5
fi

if [[ -z "$PS5_PORT" ]]; then
    PS5_PORT=9021
fi

if [ "$#" -ne 1 ]; then
    echo "Usage: $0 <PATH>"
    exit 1
fi

netcat -q0 -v $PS5_HOST $PS5_PORT < $1
